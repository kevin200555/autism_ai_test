platform :ios, '13.0'

# CocoaPods disables stats
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Use verbose installation for better debugging
install! 'cocoapods'

# Setup Xcode build configuration
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Get the Flutter root
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  raise 'Generated.xcconfig must exist. Run "flutter pub get" first.' unless File.exist?(generated_xcode_build_settings_path)

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise 'FLUTTER_ROOT not found in Generated.xcconfig'
end

# Load Flutter pod helper
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Only use flutter_install_all_ios_pods, do not declare 'pod Flutter' yourself!
target 'Runner' do
  use_frameworks!
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end
